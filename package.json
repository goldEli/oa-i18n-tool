{
  "name": "ifun-oa-i18n",
  "displayName": "ifun-oa-i18n",
  "description": "i18n tool",
  "publisher": "miaoyu",
  "icon": "logo.png",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ifun i18n",
      "properties": {
        "ifun-oa-i18n.url": {
          "type": "object",
          "default": null,
          "description": "国际化资源配置"
        },
        "ifun-oa-i18n.tranSource": {
          "type": "string",
          "default": "baidu",
          "description": "翻译api"
        }
      }
    },
    "commands": [
      {
        "command": "i18nReplace",
        "title": "IFUN i18n"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "i18nReplace",
          "group": "navigation",
          "when": "(resourceLangId == javascript || resourceLangId == typescript || resourceLangId == typescriptreact || resourceLangId == javascriptreact) && editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "i18nReplace",
        "key": "ctrl+t",
        "mac": "cmd+t",
        "when": "(resourceLangId == javascript || resourceLangId == typescript || resourceLangId == typescriptreact || resourceLangId == javascriptreact) && editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@babel/core": "^7.22.9",
    "node-fetch": "^2.6.12"
  }
}
